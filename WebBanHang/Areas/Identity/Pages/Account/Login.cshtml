@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}



<div class=row flex-grow">
    <div class="col-lg-6 mx-auto">
        <div class="auth-form-light text-left p-5">
            <div class="brand-logo">
                <img src="~/_LayoutAdmin/assets/images/logo.svg">
            </div>
            <h4>Hello! let's get started</h4>
            <h6 class="font-weight-light">Sign in to continue.</h6>
            <form id="account" method="post">

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                <div class="form-group">
                    @* <label asp-for="Input.Email">Email</label> *@
                    <input asp-for="Input.Email" class="form-control" aria-required="true"
                           placeholder="UserName or Email" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @* <label asp-for="Input.Password">Password</label> *@
                    <input asp-for="Input.Password" class="form-control" aria-required="true"
                           placeholder="Password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>


                <!-- Submit Button -->
                <div class="form-group mb-2 mt-3">
                    <button id="login-submit" type="submit" class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn">SIGN IN</button>
                </div>
                <!-- Remember Me -->
                <div class="my-2 d-flex justify-content-between align-items-center">
                    <div class="form-check">
                        
                        <label class="form-check-label text-muted" asp-for="Input.RememberMe">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    @* <a href="#" class="auth-link text-black">Forgot password?</a> *@
                </div>
                <!-- Links -->
                <div class="text-center mt-4 font-weight-light">
                    Don't have an account?
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">
                        Register as a new user
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

}
