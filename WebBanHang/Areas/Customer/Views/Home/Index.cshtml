@using WebBanHang.Models.Models
@{
    ViewData["Title"] = "Trang Chủ - Đặt Đồ Ăn Online";
   Layout = "~/Views/Shared/_LayoutUser.cshtml";
    var categories = ViewBag.Categories as IEnumerable<dynamic>;
    var topFoods = ViewBag.TopRatedFoods as IEnumerable<dynamic>;
}
<section class="featured spad p-0 m-1">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2 style="color:rgb(127, 173, 57)">Top Food</h2>
                </div>
                <div class="featured__controls">
                    <ul>
                        <li class="active" data-filter="*">All</li>
                        @foreach(Category c in categories)
                        {
                            <li data-filter=".@c.CategoryName.ToLower().Replace(" ", "")">@c.CategoryName</li>
                        }
                    </ul>
                </div>
            </div>
        </div>
        <div class="row featured__filter">
            @foreach(Food f in topFoods)
            {
                @await Component.InvokeAsync("RenderSanPham", new { f = f, itemsPerRow =4})            
            }
        </div>
    </div>
</section>
