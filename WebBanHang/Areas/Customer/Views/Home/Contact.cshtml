@{
    ViewData["Title"] = "Liên Hệ - Đặt Đồ Ăn Online";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="container mt-4">
    <div class="jumbotron text-center">
        <h1 class="display-5">Liên Hệ Với Chúng Tôi</h1>
        <p class="lead">Hãy để lại lời nhắn — chúng tôi sẽ phản hồi bạn sớm nhất có thể.</p>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card shadow p-4">
                <h4 class="mb-3">Gửi Tin Nhắn</h4>
                <form asp-action="Contact" method="post">
                    <div class="form-group mb-3">
                        <label for="name">Họ và Tên</label>
                        <input type="text" class="form-control" id="name" name="name" required />
                    </div>

                    <div class="form-group mb-3">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" id="email" name="email" required />
                    </div>

                    <div class="form-group mb-3">
                        <label for="message">Nội dung</label>
                        <textarea class="form-control" id="message" name="message" rows="4" required></textarea>
                    </div>

                    <button type="submit" class="btn btn-primary btn-block">Gửi Liên Hệ</button>
                </form>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow p-4">
                <h4 class="mb-3">Thông Tin Liên Hệ</h4>
                <p><i class="fas fa-map-marker-alt"></i> 123 Đường Ăn Uống, Quận 1, TP.HCM</p>
                <p><i class="fas fa-phone"></i> 0123 456 789</p>
                <p><i class="fas fa-envelope"></i> support@doanonline.vn</p>
                <hr />
                <p>Theo dõi chúng tôi tại:</p>
                <a href="#" class="me-3"><i class="fab fa-facebook fa-lg"></i></a>
                <a href="#" class="me-3"><i class="fab fa-instagram fa-lg"></i></a>
                <a href="#" class="me-3"><i class="fab fa-twitter fa-lg"></i></a>
            </div>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success mt-4 text-center">
            @TempData["Success"]
        </div>
    }
</div>
