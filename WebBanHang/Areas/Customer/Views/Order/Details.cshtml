@model WebBanHang.Models.Models.Order

@{
    ViewData["Title"] = "Chi tiết đơn hàng " + (Model?.OrderCode ?? "");
}

<h2>Đơn hàng @Model.OrderCode</h2>

<div class="row g-3 mb-3">
    <div class="col-md-6">
        <div class="card p-3">
            <div><b>Trạng thái:</b> @Model.Status</div>
            <div><b>Ngày tạo:</b> @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</div>
            <div><b><b>Tổng tiền:</b> @($"{Model.TotalAmount:N0} ₫")
</div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card p-3">
            <div><b>Giao đến:</b> @Model.ShippingAddress</div>
            <div><b>Điện thoại:</b> @Model.PhoneNumber</div>
            <div><b>Thanh toán:</b> @Model.PaymentMethod</div>
            <div><b>Ghi chú:</b> @Model.Notes</div>
        </div>
    </div>
</div>

<h4 class="mt-3">Sản phẩm</h4>
<table class="table table-bordered align-middle">
    <thead>
        <tr>
            <th>Món</th>
            <th style="width:120px">SL</th>
            <th style="width:160px">Đơn giá</th>
            <th style="width:180px">Thành tiền</th>
        </tr>
    </thead>
    <tbody>
        @{
            var items = Model?.OrderDetails ?? Enumerable.Empty<WebBanHang.Models.Models.OrderDetail>();
            if (!items.Any())
            {
                <tr><td colspan="4" class="text-center text-muted">Đơn hàng chưa có sản phẩm</td></tr>
            }
            else
            {
                foreach (var it in items)
                {
                    var name = it.Food?.FoodName ?? it.FoodName;
                    <tr>
                        <td>@name</td>
                        <td>@it.Quantity</td>
                        <td>@($"{it.Price:N0} ₫")</td>
                        <td>@($"{(it.Price * it.Quantity):N0} ₫")</td>
                    </tr>
                }
            }
        }
    </tbody>
</table>

<div class="d-flex justify-content-between mt-3">
    <a asp-area="Customer" asp-controller="Order" asp-action="Index" class="btn btn-outline-secondary">
        ← Quay lại danh sách
    </a>
    <div class="h5 m-0">
        Tổng cộng: <b>@($"{Model.TotalAmount:N0} ₫")</b>
    </div>
</div>
