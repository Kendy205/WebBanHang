@model WebBanHang.Models.Models.Order
@using System.Globalization
@{
    ViewData["Title"] = "Đặt hàng thành công";
    var currency = new CultureInfo("vi-VN");
}

<div class="container my-4">
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="d-flex align-items-center justify-content-between">
                <h3 class="mb-0 text-success">🎉 Đặt hàng thành công!</h3>
                <div>
                    <a asp-area="Customer" asp-controller="Order" asp-action="Index" class="btn btn-outline-secondary btn-sm">Danh sách đơn</a>
                    <a asp-area="Customer" asp-controller="Order" asp-action="Details" asp-route-id="@Model.OrderId" class="btn btn-primary btn-sm">Xem chi tiết</a>
                </div>
            </div>
            <hr />

            <div class="row g-3">
                <div class="col-md-6">
                    <div class="mb-2"><strong>Mã đơn hàng:</strong> @Model.OrderCode</div>
                    <div class="mb-2"><strong>Trạng thái:</strong> @Model.Status</div>
                </div>
                <div class="col-md-6">
                    <div class="mb-2"><strong>Ngày đặt:</strong> @Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</div>
                    <div class="mb-2"><strong>Mã đơn (ID):</strong> @Model.OrderId</div>
                </div>
            </div>

            @if (Model?.OrderDetails != null && Model.OrderDetails.Any())

            {
                <hr />
                <h5>Chi tiết sản phẩm</h5>

                <div class="table-responsive">
                    <table class="table align-middle">
                        <thead>
                            <tr>
                                <th>Sản phẩm</th>
                                <th class="text-center">SL</th>
                                <th class="text-end">Đơn giá</th>
                                <th class="text-end">Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                decimal total = 0m;
                            }
                            @foreach (var it in Model.OrderDetails)
                            {
                                // Ưu tiên tên/giá lưu trong chi tiết đơn hàng
                                var name = !string.IsNullOrWhiteSpace(it.FoodName) ? it.FoodName
                                : (it.Food?.FoodName ?? "Món ăn");

                                decimal unitPrice = it.Price; // vì OrderDetail có Price
                                int qty = it.Quantity;

                                var lineTotal = unitPrice * qty;
                                total += lineTotal;

                                <tr>
                                    <td>@name</td>
                                    <td class="text-center">@qty</td>
                                    <td class="text-end">@string.Format(currency, "{0:c0}", unitPrice)</td>
                                    <td class="text-end">@string.Format(currency, "{0:c0}", lineTotal)</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th colspan="3" class="text-end">Tổng cộng</th>
                                <th class="text-end">@string.Format(currency, "{0:c0}", total)</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info mt-3">
                    Đơn hàng chưa có danh sách sản phẩm hiển thị.
                </div>
            }

            <div class="mt-3">
                <a asp-area="Customer" asp-controller="Order" asp-action="Index" class="btn btn-outline-secondary">Về danh sách đơn</a>
                <a asp-area="Customer" asp-controller="Order" asp-action="Details" asp-route-id="@Model.OrderId" class="btn btn-primary">Xem chi tiết</a>
            </div>
        </div>
    </div>
</div>

