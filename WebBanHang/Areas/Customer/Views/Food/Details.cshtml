@model WebBanHang.Models.Models.Food
@{
    ViewBag.Title = Model.FoodName;
    var relatedFoods = ViewBag.RelatedFoods as IEnumerable<WebBanHang.Models.Models.Food>;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-5">
            <img src="@Model.ImageUrl" alt="@Model.FoodName" class="img-fluid rounded shadow" />
        </div>

        <div class="col-md-7">
            <h2>@Model.FoodName</h2>
            <p class="text-muted">@Model.Price.ToString("N0") đ</p>
            <p>@Model.Description</p>
            <p><strong>Đánh giá:</strong> ⭐ @Model.Rating</p>

            <a href="@Url.Action("Index", "Food", new { area = "Customer" })" class="btn btn-outline-secondary mt-3">← Quay lại</a>
        </div>
    </div>

    <hr />

    <h4 class="mt-4">Món liên quan</h4>
    <div class="row">
        @foreach (var food in relatedFoods)
        {
            <div class="col-md-3 mb-3">
                <div class="card">
                    <img src="@food.ImageUrl" class="card-img-top" alt="@food.FoodName" />
                    <div class="card-body">
                        <h6>@food.FoodName</h6>
                        <p class="text-muted">@food.Price.ToString("N0") đ</p>
                        <a href="@Url.Action("Details", new { id = food.FoodId })" class="btn btn-sm btn-primary">Xem</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
