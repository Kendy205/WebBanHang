@model IEnumerable<WebBanHang.Models.Models.Food>
@{
    ViewBag.Title = "Kết quả tìm kiếm";
}

<div class="container mt-4">
    <h2>Kết quả tìm kiếm cho: <span class="text-primary">@ViewBag.Keyword</span></h2>
    <hr />

    <div id="search-results" class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="@item.ImageUrl" class="card-img-top" alt="@item.FoodName" />
                    <div class="card-body">
                        <h5 class="card-title">@item.FoodName</h5>
                        <p class="text-muted">@item.Price.ToString("N0") đ</p>
                        <a href="@Url.Action("Details", "Food", new { id = item.FoodId })" class="btn btn-outline-primary btn-sm">Chi tiết</a>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Phân trang -->
    <nav>
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Search", new { keyword = ViewBag.Keyword, page = i })">@i</a>
                </li>
            }
        </ul>
    </nav>
</div>
