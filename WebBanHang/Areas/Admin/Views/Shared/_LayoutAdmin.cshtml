@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Admin Dashboard</title>

    <!-- CSS -->
    <link rel="stylesheet" href="~/_LayoutAdmin/assets/vendors/mdi/css/materialdesignicons.min.css" />
    <link rel="stylesheet" href="~/_LayoutAdmin/assets/vendors/css/vendor.bundle.base.css" />
    <link rel="stylesheet" href="~/_LayoutAdmin/assets/css/style.css" />

    <link rel="shortcut icon" href="~/_LayoutAdmin/assets/images/favicon.ico" />
</head>
<body>
    <div class="container-scroller">
        <!-- Navbar -->
        @Html.Partial("~/Areas/Admin/Views/Shared/partials/_navbar.cshtml")

        <div class="container-fluid page-body-wrapper">
            <!-- Sidebar -->
            @Html.Partial("~/Areas/Admin/Views/Shared/partials/_sidebar.cshtml")

            <!-- Nội dung chính -->
            <div class="main-panel">
                <div class="content-wrapper">
                    @RenderBody()
                </div>

                <!-- Footer -->
                @Html.Partial("~/Areas/Admin/Views/Shared/partials/_footer.cshtml")
            </div>
        </div>
    </div>

    <!-- JS -->
    <script src="~/_LayoutAdmin/assets/vendors/js/vendor.bundle.base.js"></script>
    <script src="~/_LayoutAdmin/assets/vendors/chart.js/Chart.min.js"></script>
    <script src="~/_LayoutAdmin/assets/js/off-canvas.js"></script>
    <script src="~/_LayoutAdmin/assets/js/hoverable-collapse.js"></script>
    <script src="~/_LayoutAdmin/assets/js/misc.js"></script>
    <script src="~/_LayoutAdmin/assets/js/dashboard.js"></script>
    <script src="~/_LayoutAdmin/assets/js/todolist.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
