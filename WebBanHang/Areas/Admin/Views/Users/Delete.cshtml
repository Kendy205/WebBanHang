@model WebBanHang.DAL.Data.ApplicationUser

@{
    ViewData["Title"] = "Xác nhận xóa người dùng";
}

<h4>@ViewData["Title"]</h4>
<p class="text-danger">Bạn có chắc chắn muốn xóa vĩnh viễn người dùng này không? Hành động này không thể hoàn tác.</p>
<hr />
<partial name="~/Views/Shared/Partials/_ProfileUser.cshtml" model="Model" />
<form asp-action="DeleteConfirmed" method="post" class="mt-4">
    @Html.AntiForgeryToken()
    <input type="hidden" name="userId" value="@Model.Id" />

    @* Sử dụng các class button tương tự như trang Create *@
    <button type="submit" class="btn btn-gradient-danger btn-lg font-weight-medium">Xác nhận Xóa</button>
    <a asp-action="Index" class="btn btn-light btn-lg">Hủy bỏ</a>
</form>
