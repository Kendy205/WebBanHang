@model IEnumerable<WebBanHang.Models.Models.Food>




<div class="col-12 grid-margin">
    <div class="row mb-3">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <a asp-action="Create" class="btn btn-primary">Thêm món ăn</a>

            <form asp-action="Index" method="get" class="d-flex align-items-center">

                @Html.DropDownList("categoryId",(SelectList)ViewBag.Categories, "-- Tất cả danh mục --", new { @class = "form-select me-2" })

                <!-- Thanh tìm kiếm -->
                <input type="text" name="searchTerm" value="@ViewBag.SearchTerm" class="form-control me-2" placeholder="Tìm kiếm theo tên hoặc mô tả..." />
                <button type="submit" class="btn btn-outline-primary">Lọc</button>
            </form>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Danh Sách Món Ăn</h4>
            <div class="table-responsive">
                <table class="table  table-hover">
                    <thead>
                        <tr>
                            <th>Mã món</th>
                            <th>Tên món</th>
                            <th>Mô tả</th>
                            <th>Giá</th>
                            <th>Còn hàng</th>
                            <th>Đánh giá</th>
                            <th>Danh mục</th>
                            <th>Ngày tạo</th>
                            <th>Ngày cập nhật</th>
                            <th>Hình ảnh</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var food in Model)
                        {
                            <tr style="@(food.IsAvailable ? "" : "background-color: #d3d3d3; color: #6c757d; opacity: 0.7;")">
                                <td>@food.FoodId</td>
                                <td>@food.FoodName</td>
                                <td>@food.Description</td>
                                <td>@food.Price.ToString("N0") đ</td>
                                <td>
                                    @(food.IsAvailable ? "Có" : "Hết")
                                </td>
                                <td>@food.Rating.ToString("0.0") / 5</td>
                                <td>@food.Category?.CategoryName</td>
                                <td>@food.CreatedAt.ToString("dd/MM/yyyy")</td>
                                <td>@food.UpdatedAt.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <img src="@(string.IsNullOrEmpty(food.ImageUrl) ? "/assets/images/faces/default.jpg" : food.ImageUrl)"
                                         class="me-2"
                                         alt="image"
                                         style="width:40px;height:40px;border-radius:50%;object-fit:cover;">
                                </td>
                                <td>
                                    <a asp-action="Edit"
                                       asp-route-foodId="@food.FoodId"
                                       class="btn btn-sm btn-gradient-warning text-white">
                                        Sửa
                                    </a>
                                </td>
                                <td>
                                    <a asp-action="Delete"
                                       asp-route-foodId="@food.FoodId"
                                       class="btn btn-sm btn-gradient-warning text-white">
                                        xóa
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-center mt-3">
                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                            <a class="page-link"
                               asp-action="Index"
                               asp-route-page="@i"
                               asp-route-categoryId="@ViewBag.CurrentCategory"
                               asp-route-searchTerm="@ViewBag.SearchTerm">
                                @i
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    </div>
</div>
