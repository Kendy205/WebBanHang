@model IEnumerable<WebBanHang.Models.Models.Category>
@{
    ViewData["Title"] = "Danh sách danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-header">
    <h3 class="page-title"> Danh sách danh mục </h3>
    <a class="btn btn-primary" asp-action="Create"><i class="mdi mdi-plus"></i> Thêm danh mục</a>
</div>

<div class="card mt-3">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Ảnh</th>
                        <th>Tên danh mục</th>
                        <th>Mô tả</th>
                        <th>Ngày tạo</th>
                        <th class="text-center">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @if (!string.IsNullOrEmpty(item.ImageUrl))
                                {
                                    <img src="@item.ImageUrl" alt="image" style="width:70px;height:70px;object-fit:cover;border-radius:8px;" />
                                }
                                else
                                {
                                    <span class="text-muted">Không có ảnh</span>
                                }
                            </td>
                            <td>@item.CategoryName</td>
                            <td>@item.Description</td>
                            <td>@item.CreatedAt.ToString("dd/MM/yyyy")</td>
                            <td class="text-center">
                                <a asp-action="Details" asp-route-Categoriesid="@item.CategoryId" class="btn btn-sm btn-info"><i class="mdi mdi-eye"></i></a>
                                <a asp-action="Edit" asp-route-Categoriesid="@item.CategoryId" class="btn btn-sm btn-warning"><i class="mdi mdi-pencil"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-sm btn-danger"><i class="mdi mdi-delete"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
