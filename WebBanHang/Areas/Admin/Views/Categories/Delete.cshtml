@model WebBanHang.Models.Models.Category
@{
    ViewData["Title"] = "Xóa danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-header">
    <h3 class="page-title"> Xóa danh mục </h3>
</div>

<div class="card">
    <div class="card-body">
        <h4>Bạn có chắc muốn xóa danh mục này?</h4>
        <hr />
        <p><b>Tên:</b> @Model.CategoryName</p>
        <p><b>Mô tả:</b> @Model.Description</p>

        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" style="width:120px;height:120px;object-fit:cover;border-radius:8px;" />
        }

        <form asp-action="DeleteConfirmed" asp-route-id="@Model.CategoryId" method="post" class="mt-3">
            <button type="submit" class="btn btn-danger">Xóa</button>
            <a asp-action="Index" class="btn btn-secondary">Hủy</a>
        </form>
    </div>
</div>
