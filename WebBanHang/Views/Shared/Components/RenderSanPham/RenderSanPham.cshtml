@using WebBanHang.Models.Models
@model Food
@{
    int itemsPerRow = ViewBag.ItemsPerRow ?? 4;
    string columnClass = itemsPerRow switch
    {
        1 => "col-lg-12",
        2 => "col-lg-6 col-md-6 col-sm-12",
        3 => "col-lg-4 col-md-6 col-sm-12",
        4 => "col-lg-3 col-md-4 col-sm-6",
        _ => "col-lg-3 col-md-4 col-sm-6"
    };
}
<div 
    @* style="border:1px solid red" *@
    class="@columnClass mix @Model.Category.CategoryName.ToLower().Replace(" ", "")"
>
    <div class="featured__item">
        <div class="featured__item__pic set-bg" data-setbg="@Url.Content($"~/_LayoutUser/img/featured/feature-{Model.FoodId}.jpg")">
            <ul class="featured__item__pic__hover">
                <li><a asp-area="Customer" asp-controller="Food" asp-action="Details" asp-route-id="@Model.FoodId"><i class="fa fa-heart"></i></a></li>
                <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                <li><a href="#"><i class="fa fa-shopping-cart"></i></a></li>
            </ul>
        </div>
        <div class="featured__item__text">
            <h6><a href="#">@Model.FoodName</a></h6>
            <h5>@Model.Price</h5>
        </div>
    </div>
</div>
