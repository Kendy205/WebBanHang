@using WebBanHang.DAL.Data
@model ApplicationUser
<div class="row">
    <div class="col-md-8">
        <div class="pt-3">
            <div class="form-group">
                <label >Avatar</label>
                @* Hiển thị dữ liệu trong input chỉ đọc để nhất quán giao diện *@
                @* <input asp-for="imgUrl" class="form-control form-control-lg" readonly /> *@
                <img src="@Model.imgUrl" />
            </div>
            <div class="form-group">
                <label asp-for="FulName"></label>
                @* Hiển thị dữ liệu trong input chỉ đọc để nhất quán giao diện *@
                <input asp-for="FulName" class="form-control form-control-lg" readonly />
            </div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control form-control-lg" readonly />
            </div>

            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control form-control-lg" readonly />
            </div>

            <div class="form-group">
                <label>Quyền (Roles)</label>
                @{
                    var roles = "Không có quyền nào";
                    if (ViewBag.UserRoles != null && ((IEnumerable<string>)ViewBag.UserRoles).Any())
                    {
                        roles = string.Join(", ", (IEnumerable<string>)ViewBag.UserRoles);
                    }
                }
                <input type="text" class="form-control form-control-lg" value="@roles" readonly />
            </div>
        </div>
    </div>
</div>